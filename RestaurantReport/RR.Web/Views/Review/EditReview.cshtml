@model RR.ViewModels.EditReviewViewModel

@{
    ViewBag.Title = "EditReview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Review</h2>

@using (Html.BeginForm("EditReview", "Review", FormMethod.Post))
{
    @Html.ValidationSummary(true)

    @Html.HiddenFor(x => x.ReviewPublicId, new { Value = Model.ReviewPublicId})

<fieldset>
    <legend>Edit Review</legend>
    <div class="form-group">
        @Html.LabelFor(x => x.ReviewerName) :
        <div>
            @Html.EditorFor(x => x.ReviewerName, new { htmlAttributes = new { @class = "form-control", Value = Model.ReviewerName } })
            @Html.ValidationMessageFor(x => x.ReviewerName, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Rating) :
        <div>
            @Html.EditorFor(x => x.Rating, new { htmlAttributes = new { @class = "form-control", Value = Model.Rating } })
            @Html.ValidationMessageFor(x => x.Rating, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Comment) :
        <div>
            @Html.EditorFor(x => x.Comment, new { htmlAttributes = new { @class = "form-control", Value = Model.Comment } })
            @Html.ValidationMessageFor(x => x.Comment, null, new { @class = "text-danger" })
        </div>
    </div>

    <input type="submit" class="btn btn-primary" value="Submit" />
</fieldset>
}