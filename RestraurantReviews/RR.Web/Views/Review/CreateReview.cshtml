@model RR.ViewModels.AddReviewViewModel

@{
    ViewBag.Title = "AddReview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Review</h2>

@using (@Html.BeginForm("CreateReview", "Review", FormMethod.Post))
{
    @Html.ValidationSummary(true)

    @Html.HiddenFor(x => x.RestaurantViewModel, @Model.RestaurantViewModel)

<fieldset>
    <legend>Add Review</legend>
    <div class="form-group">
        @Html.LabelFor(x => x.ReviewerName) :
        <div>
            @Html.EditorFor(x => x.ReviewerName, new { htmlAttributes = new { @class = "form-control", placeholder = "Your name..." } })
            @Html.ValidationMessageFor(x => x.ReviewerName, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Rating) :
        <div>
            @Html.EditorFor(x => x.Rating, new { htmlAttributes = new { @class = "form-control", placeholder = "Rating..." } })
            @Html.ValidationMessageFor(x => x.Rating, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Comment) :
        <div>
            @Html.EditorFor(x => x.Comment, new { htmlAttributes = new {@class = "form-control", placeholder = "Comments..."}})
            @Html.ValidationMessageFor(x => x.Comment, null, new {  @class = "text-danger"})
        </div>
    </div>

    <input type="submit" class="btn btn-dark" value="Add Review" />
</fieldset>
}

