@model IEnumerable<RR.ViewModels.TopRatedRestaurantViewModel>

@{
    ViewBag.Title = "TopRatedRestaurants";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Top Rated Restaurants</h2>

<div class="row">
    @foreach (var i in Model)
    {
        <div class="col">
        <div class="card text-center pt-3 pb-3">
            <h4 class="card-title text-dark">@i.Name @i.AverageRating</h4>
            <p class="card-text">
                <address class="text-dark">
                    @i.Street<br/>
                    @i.City @i.State<br/>
                    @i.State @i.ZipCode
                </address>
            </p>
            @using (Html.BeginForm("RestaurantDetails", "Restaurant", FormMethod.Get))
            {
                @Html.Hidden("restaurantId", i.RestaurantPublicId)
                <input type="submit" class="text-light btn btn-dark" value="See Details" />
            }
        </div>
        </div>
    }
</div>